<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FilterActivity">

    <!-- Toolbar general -->
    <include
        android:id="@+id/includeFilterActivity"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAplicar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeFilterActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFechaEmision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/titulo_fecha_emision"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/txt_desde"
                app:layout_constraintStart_toStartOf="@+id/tvFechaEmision"
                app:layout_constraintTop_toBottomOf="@+id/tvFechaEmision" />

            <TextView
                android:id="@+id/tvHasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:text="@string/txt_hasta"
                app:layout_constraintBottom_toBottomOf="@+id/tvDesde"
                app:layout_constraintStart_toEndOf="@+id/tvDesde"
                app:layout_constraintTop_toTopOf="@+id/tvDesde" />

            <Button
                android:id="@+id/btnFechaDesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_grey"
                android:text="@string/btn_fecha"
                android:textAllCaps="false"
                android:textColor="@color/light_black"
                app:layout_constraintStart_toStartOf="@+id/tvDesde"
                app:layout_constraintTop_toBottomOf="@+id/tvDesde" />

            <Button
                android:id="@+id/btnFechaHasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_grey"
                android:text="@string/btn_fecha"
                android:textAllCaps="false"
                android:textColor="@color/light_black"
                app:layout_constraintStart_toStartOf="@+id/tvHasta"
                app:layout_constraintTop_toBottomOf="@+id/tvHasta" />

            <!-- View como linea separadora -->
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/btnFechaDesde" />

            <TextView
                android:id="@+id/tvImporteTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/titulo_importe"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvFechaEmision"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <TextView
                android:id="@+id/tvMinSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="val min"
                app:layout_constraintStart_toStartOf="@+id/tvImporteTitulo"
                app:layout_constraintTop_toBottomOf="@+id/tvImporteTitulo" />

            <TextView
                android:id="@+id/tvValorActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Val slider"
                app:layout_constraintBottom_toBottomOf="@+id/tvMinSlider"
                app:layout_constraintEnd_toStartOf="@+id/tvMaxSlider"
                app:layout_constraintStart_toEndOf="@+id/tvMinSlider"
                app:layout_constraintTop_toTopOf="@+id/tvMaxSlider" />

            <TextView
                android:id="@+id/tvMaxSlider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="val max"
                app:layout_constraintBottom_toBottomOf="@+id/tvMinSlider"
                app:layout_constraintEnd_toEndOf="@+id/btnFechaHasta"
                app:layout_constraintTop_toTopOf="@+id/tvMinSlider" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/tvMaxSlider"
                app:layout_constraintStart_toStartOf="@+id/tvMinSlider"
                app:layout_constraintTop_toBottomOf="@+id/tvMinSlider" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slider" />

            <TextView
                android:id="@+id/tvEstadoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/titulo_estado"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvFechaEmision"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <CheckBox
                android:id="@+id/cbPagadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/chBox_pagadas"
                app:layout_constraintStart_toStartOf="@+id/tvEstadoTitulo"
                app:layout_constraintTop_toBottomOf="@+id/tvEstadoTitulo" />

            <CheckBox
                android:id="@+id/cbAnuladas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chBox_anuladas"
                app:layout_constraintStart_toStartOf="@+id/cbPagadas"
                app:layout_constraintTop_toBottomOf="@+id/cbPagadas" />

            <CheckBox
                android:id="@+id/cbCuotaFija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chBox_cFija"
                app:layout_constraintStart_toStartOf="@+id/cbAnuladas"
                app:layout_constraintTop_toBottomOf="@+id/cbAnuladas" />

            <CheckBox
                android:id="@+id/cbPendientesPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chBox_pendientePago"
                app:layout_constraintStart_toStartOf="@+id/cbCuotaFija"
                app:layout_constraintTop_toBottomOf="@+id/cbCuotaFija" />

            <CheckBox
                android:id="@+id/cbPlanPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chBox_planPago"
                app:layout_constraintStart_toStartOf="@+id/cbPendientesPago"
                app:layout_constraintTop_toBottomOf="@+id/cbPendientesPago" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones de aplicar y eliminar filtros -->
    <Button
        android:id="@+id/btnAplicar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:text="@string/btn_aplicar"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEliminar"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_eliminar"
        android:textAllCaps="false"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnAplicar"
        app:layout_constraintStart_toStartOf="@+id/btnAplicar"/>

</androidx.constraintlayout.widget.ConstraintLayout>